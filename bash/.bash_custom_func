echo_reverse() {
  echo -ne $blackonwhite
  echo -ne "$*"
  echo -e $default
}

echo_italic() {
  echo -ne $italic
  echo -ne "$*"
  echo -e $default
}

echo_bold() {
  echo -ne $bold
  echo -ne "$*"
  echo -e $default
}

echo_underline() {
  echo -ne $underline
  echo -ne "$*"
  echo -e $default
}

netinfo(){
    echo_bold "Internal IPv4 address: "; ip a | grep 'inet\ ' | grep -v 127 | awk -F " " '{print $NF, $2}'
    echo_bold "External IPv4 address: "; wget -q -O - checkip.dyndns.org|sed -e 's/.*Current IP Address: //' | sed 's/<\/body><\/html>//'
}

# --- pop contener with systemd-nspawn
pop_ct(){
    local CT_chroot=$1
    sudo iptables -t nat -I POSTROUTING -s 192.168.10.0/24 -j MASQUERADE
    sudo echo 1 >  /proc/sys/net/ipv4/ip_forward
    sudo systemd-nspawn -bD /var/lib/machines/$CT_chroot --network-bridge=br0
}

# list ct
pop_ct_list(){
    sudo ls /var/lib/machines
}

# --- pop vm with a templated qemu-kvm img
pop_vm () {
        vmName="${1}"
        if [ -v $vmName ]
        then 
                echo "Hey, what's my name bro!" 
        else
                export LIBVIRT_DEFAULT_URI="qemu:///system"
                vmTemplate="$(cat ~/.vm-template)"
                virsh snapshot-revert ${vmTemplate} template
                virt-clone --original ${vmTemplate} --name vm-${vmName} --auto-clone --check disk_size=off
                sudo virt-sysprep --connect qemu:///system --enable customize --hostname vm-${vmName} -d vm-${vmName}
                #virsh -c qemu:///system start --console vm-${vmName}
                virsh start vm-${vmName}
                sleep 5
                virsh net-dhcp-leases default | grep vm-${vmName}
        fi
}

# --- colorized logs with tail

tailc () {
    tail $@ | ccze -A
}
